<Window x:Class="TP_F.HistoryWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP_F"
        mc:Ignorable="d"
        Title="HistoryWin" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Canvas Width="790" Height="404">
        <ListBox x:Name="HistoryList_LB" HorizontalAlignment="Left" Height="350" VerticalAlignment="Top" Width="770" FontSize="14" Canvas.Left="10" Canvas.Top="10"/>
        <Button x:Name="Close_B" Content="Закрыть" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="138" FontFamily="Arial Black" FontSize="14" Foreground="#FF495187" Click="Exit_B_Click" Canvas.Left="642" Canvas.Top="365"/>
        <Button x:Name="ClearHistory_B" Content="Отчистить историю" Canvas.Left="10" Canvas.Top="365" Width="198" Height="30" Click="ClearHistory_B_Click" FontSize="14"/>
    </Canvas>
</Window>
